<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Ex2.Ex2Controller">
   <children>
      <Pane prefHeight="400.0" prefWidth="600.0">
         <children>
            <PieChart fx:id="pieChart" prefHeight="400.0" prefWidth="300.0" />
            <BarChart fx:id="barChart" layoutX="300.0" prefHeight="400.0" prefWidth="300.0">
              <xAxis>
                <CategoryAxis label="Departements" side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis label="Students Per Departement" minorTickCount="1" side="LEFT" upperBound="10.0" />
              </yAxis>
            </BarChart>
         </children>
      </Pane>
   </children>
</AnchorPane>
